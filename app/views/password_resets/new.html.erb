<% provide(:title, "パスワードリセット") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 oldform">
    <h1>パスワードの再設定手続き</h1>
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control form-under-line' %>

      <%= f.submit "送信する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
